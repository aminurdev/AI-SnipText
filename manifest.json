{
  "manifest_version": 3,
  "name": "Area Screenshot Extension",
  "version": "1.0",
  "description": "Select an area on any webpage and convert it to an image",
  "permissions": [
    "activeTab",
    "scripting",
    "downloads",
    "tabs"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Take Area Screenshot"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["overlay.css"],
      "run_at": "document_end"
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "web_accessible_resources": [
    {
      "resources": ["overlay.css"],
      "matches": ["<all_urls>"]
    }
  ]
}