{
  "manifest_version": 3,
  "name": "AI SnipText",
  "version": "1.0",
  "description": "Chrome extension to select any area of a webpage, extract the content using Gemini AI, and return readable text with smart processing.",
  "permissions": ["activeTab", "scripting", "downloads", "tabs"],
  "host_permissions": ["https://generativelanguage.googleapis.com/*"],
  "action": {
    "default_popup": "popup.html",
    "default_title": "AI SnipText - Extract Text from Images",
    "default_icon": {
      "16": "icon16.svg",
      "48": "icon48.svg",
      "128": "icon128.svg"
    }
  },
  "icons": {
    "16": "icon16.svg",
    "48": "icon48.svg",
    "128": "icon128.svg"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["overlay.css"],
      "run_at": "document_end"
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "web_accessible_resources": [
    {
      "resources": ["overlay.css", "env.js", "config.js"],
      "matches": ["<all_urls>"]
    }
  ]
}
